{
    "extends": "./tsconfig.base",
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "build/esm",
        "tsBuildInfoFile": "build/.tsbuildinfo",
        "emitDeclarationOnly": true,
        "lib": [
            "DOM",
            "ESNext"
        ],
        "noImplicitReturns": false,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "include": [
        "src"
    ]
}